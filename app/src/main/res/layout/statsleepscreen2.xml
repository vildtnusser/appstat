<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/statSleep_name2"
        android:layout_width="93dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statSleep_age2"
        android:layout_width="115dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:text="Age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statSleep_periode2"
        android:layout_width="277dp"
        android:layout_height="46dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:text="Choose a periode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statSleep_name2" />

    <TextView
        android:id="@+id/statSleep_time1"
        android:layout_width="212dp"
        android:layout_height="44dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:text="Sleep Pattern by hour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statSleep_periode2" />

    <ImageView
        android:id="@+id/statSleep_fordeling2"
        android:layout_width="353dp"
        android:layout_height="511dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/statSleep_time1"
        app:srcCompat="@drawable/tidsfordeling1"
        tools:layout_editor_absoluteX="29dp" />
</androidx.constraintlayout.widget.ConstraintLayout>