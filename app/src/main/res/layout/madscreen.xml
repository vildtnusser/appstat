<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mad_name1"
        android:layout_width="81dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mad_age1"
        android:layout_width="101dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:text="Age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mad_left"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="65dp"
        android:text="Left"
        app:layout_constraintEnd_toStartOf="@+id/mad_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mad_name1" />

    <Button
        android:id="@+id/mad_right"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginEnd="48dp"
        android:text="Right"
        app:layout_constraintBottom_toBottomOf="@+id/mad_left"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/mad_bottle"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="20dp"
        android:text="Bottle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mad_left" />

    <Button
        android:id="@+id/mad_meal"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginEnd="48dp"
        android:text="Meal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mad_bottle" />

    <TextView
        android:id="@+id/mad_hist1"
        android:layout_width="346dp"
        android:layout_height="338dp"
        android:layout_marginTop="40dp"
        android:text="Historik(startstid, varighed, type, afstand)"
        app:layout_constraintTop_toBottomOf="@+id/mad_meal"
        tools:layout_editor_absoluteX="31dp" />
</android.support.constraint.ConstraintLayout>