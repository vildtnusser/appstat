<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/madBottle_name1"
        android:layout_width="89dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/madBottle_age1"
        android:layout_width="81dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:text="Age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/madBottle_stop1"
        android:layout_width="183dp"
        android:layout_height="49dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="114dp"
        android:text="Stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pumpeLeft_ml" />

    <Chronometer
        android:id="@+id/madBottle_tid1"
        android:layout_width="187dp"
        android:layout_height="60dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/madBottle_bottle1"
        app:layout_constraintTop_toBottomOf="@+id/madBottle_age1" />

    <TextView
        android:id="@+id/madBottle_bottle1"
        android:layout_width="88dp"
        android:layout_height="61dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="50dp"
        android:text="Bottle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/madBottle_name1" />

    <TextView
        android:id="@+id/madBottle_hist1"
        android:layout_width="321dp"
        android:layout_height="337dp"
        android:layout_marginTop="30dp"
        android:text="Historik(startstid, lÃ¦ngde, bryst side, afstand)"
        app:layout_constraintTop_toBottomOf="@+id/madBottle_stop1"
        tools:layout_editor_absoluteX="31dp" />

    <TextView
        android:id="@+id/pumpeLeft_ml"
        android:layout_width="81dp"
        android:layout_height="46dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="antal mL"
        app:layout_constraintEnd_toStartOf="@+id/madBottle_type1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/madBottle_bottle1" />

    <TextView
        android:id="@+id/madBottle_type1"
        android:layout_width="157dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:text="Type(bryst/MME)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/madBottle_tid1" />


</android.support.constraint.ConstraintLayout>