<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/statMad_name2"
        android:layout_width="93dp"
        android:layout_height="51dp"
        android:text="Name"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="25dp" />

    <TextView
        android:id="@+id/statMad_age2"
        android:layout_width="109dp"
        android:layout_height="54dp"
        android:text="Age"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="22dp" />

    <TextView
        android:id="@+id/statSMad_periode2"
        android:layout_width="277dp"
        android:layout_height="46dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="113dp"
        android:text="Choose a periode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statMad_name2" />

    <TextView
        android:id="@+id/statMad_time1"
        android:layout_width="212dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="183dp"
        android:text="Feeding Pattern by hour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statSMad_periode2" />

    <ImageView
        android:id="@+id/statMad_fordeling2"
        android:layout_width="329dp"
        android:layout_height="472dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/statMad_time1"
        app:srcCompat="@drawable/tidsfordeling1"
        tools:layout_editor_absoluteX="41dp" />


</androidx.constraintlayout.widget.ConstraintLayout>