<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/statMad_name1"
        android:layout_width="115dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statMad_age1"
        android:layout_width="111dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:text="Age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statMad_histo1"
        android:layout_width="338dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:text="Histogram for feeding"
        app:layout_constraintTop_toBottomOf="@+id/statMad_periode1"
        tools:layout_editor_absoluteX="36dp" />

    <TextView
        android:id="@+id/statMad_periode1"
        android:layout_width="349dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:text="Choose a periode"
        app:layout_constraintTop_toBottomOf="@+id/statMad_name1"
        tools:layout_editor_absoluteX="25dp" />

    <ImageView
        android:id="@+id/statMad_histogram"
        android:layout_width="352dp"
        android:layout_height="387dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/statMad_histo1"
        app:srcCompat="@drawable/testhist1"
        tools:layout_editor_absoluteX="29dp" />

</androidx.constraintlayout.widget.ConstraintLayout>